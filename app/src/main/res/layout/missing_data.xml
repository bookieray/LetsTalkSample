<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/missing_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/missing_data_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conversation is either missing or an error occured"
                android:textStyle="bold"
                android:textSize="@dimen/heading_size"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/missing_data_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conversation is either missing or an error occured"
                android:textSize="@dimen/description_size"
                android:layout_below="@id/missing_data_heading"
                android:textColor="@color/red"
                android:layout_alignStart="@id/missing_data_heading"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_missing_data" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/missing_data_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View other convos"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>