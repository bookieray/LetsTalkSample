<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_comment_rootview"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ProgressBar
            android:id="@+id/loading_head_comments"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:progressTint="@color/purple_700"
            android:indeterminate="true"
            android:indeterminateTint="@color/purple_700"
            android:visibility="gone"

            />



        <RelativeLayout
            android:id="@+id/comment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/right_tv_bg"
            android:layout_alignParentLeft="true"
            android:padding="7dp"
            android:layout_below="@+id/loading_head_comments"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <include layout="@layout/message_qouted"
                    android:layout_alignStart="@id/comment_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message_qoute_agree"
                    android:layout_centerHorizontal="true"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--The commentator's name-->
                        <TextView
                            android:id="@+id/comment_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raymond Mdunge"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/comment_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text=""
                            android:textColor="@color/purple_700"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                            android:id="@+id/hjk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👍"
                            android:textColor="@color/dark_yellow"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ms.square.android.expandabletextview.ExpandableTextView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        expandableTextView:maxCollapsedLines="1"
                        expandableTextView:animDuration="200"
                        >

                        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                            android:id="@id/expandable_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:tag="kosps"/>

                        <ImageButton
                            android:id="@id/expand_collapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:layout_gravity="right|bottom"
                            android:background="@android:color/transparent"/>
                    </com.ms.square.android.expandabletextview.ExpandableTextView>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_sent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:00 am"
                        android:textSize="10sp"

                        />



                    <TextView
                        android:id="@+id/num_people_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1k read"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        />




                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/part_of_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/comment_view"
            android:text="Early Morning"
            android:visibility="gone"
            android:textStyle="bold"
            />



    </RelativeLayout>



</RelativeLayout>