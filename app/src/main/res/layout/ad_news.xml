<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    ads:adSize="BANNER"
    ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_bookie_logo"
                android:layout_width="32dp"
                android:layout_height="40dp"
                ads:srcCompat="@drawable/ic_bookie"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ad_badge"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        ads:srcCompat="@drawable/ad_badge"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/mediatype1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bookie"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/news_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bookie making group convo easy, organized and reliable information    "
                        />

                    <TextView
                        android:id="@+id/lead_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="         "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>

